<config>
    <tabs>
        <netgo translate="label" module="netgo_slider">
            <label>Netgo</label>
            <sort_order>2000</sort_order>
        </netgo>
    </tabs>
    <sections>
        <netgo_slider translate="label" module="netgo_slider">
            <class>separator-top</class>
            <label>Home Background Slider</label>
            <tab>netgo</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <homeslider translate="label" module="netgo_slider">
                    <label>Homeslider</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enableslider translate="label">
                            <label>Enable Slider</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enableslider>
						 <enablejquery translate="label">
                            <label>Enable jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enablejquery>
                         
                    </fields>
                </homeslider>
				  <othersettings translate="label" module="netgo_slider">
                    <label>Home Slider Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                         
                        <slideinterval translate="label comment">
                            <label>Slide Interval</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>In seconds(for e.g. use 3 if you want the interval to be 3 seconds), Default is 5</comment>
                        </slideinterval>
						  <slidespeed translate="label comment">
                            <label>Slide Transition Speed</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Default is 500</comment>
                        </slidespeed>
						  <slideautoplay translate="label comment">
                           <label>Auto play</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slideautoplay>
						 <slideeffect translate="label comment">
							 <label>Slide Effect</label>
							<comment></comment>
							<frontend_type>select</frontend_type>
							<source_model>netgo_slider/homeslider</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
                        </slideeffect>
						
                         
                    </fields>
                </othersettings>
            </groups>
        </netgo_slider>
    </sections>
</config>
