<config>
    <modules>
        <Netgo_Slider>
            <version>1.0.0</version>
        </Netgo_Slider>
    </modules>
    <global>
        <resources>
            <netgo_slider_setup>
                <setup>
                    <module>Netgo_Slider</module>
                    <class>Netgo_Slider_Model_Resource_Setup</class>
                </setup>
            </netgo_slider_setup>
        </resources>
        <blocks>
            <netgo_slider>
                <class>Netgo_Slider_Block</class>
            </netgo_slider>
        </blocks>
        <helpers>
            <netgo_slider>
                <class>Netgo_Slider_Helper</class>
            </netgo_slider>
        </helpers>
        <models>
            <netgo_slider>
                <class>Netgo_Slider_Model</class>
                <resourceModel>netgo_slider_resource</resourceModel>
            </netgo_slider>
            <netgo_slider_resource>
                <class>Netgo_Slider_Model_Resource</class>
                <entities>
                    <homeslider>
                        <table>netgo_slider_homeslider</table>
                    </homeslider>
                    <homeslider_store>
                        <table>netgo_slider_homeslider_store</table>
                    </homeslider_store>
                </entities>
            </netgo_slider_resource>
        </models>
        <events>
            <controller_front_init_routers>
                <observers>
                    <netgo_slider>
                        <class>Netgo_Slider_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </netgo_slider>
                </observers>
            </controller_front_init_routers>
		 
           <core_block_abstract_prepare_layout_before>
               <observers>
                   <netgo_slider_prepare_layout_before>
                       <class>Netgo_Slider_Model_Preparelayout</class>
                       <method>prepareLayoutBefore</method>
                   </netgo_slider_prepare_layout_before>
               </observers>
           </core_block_abstract_prepare_layout_before>
 
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <netgo_slider>
                    <file>netgo_slider.xml</file>
                </netgo_slider>
            </updates>
        </layout>
        <translate>
            <modules>
                <Netgo_Slider>
                    <files>
                        <default>Netgo_Slider.csv</default>
                    </files>
                </Netgo_Slider>
            </modules>
        </translate>
        <global_search>
            <homeslider>
                <class>netgo_slider/adminhtml_search_homeslider</class>
                <acl>netgo_slider</acl>
            </homeslider>
        </global_search>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Netgo_Slider before="Mage_Adminhtml">Netgo_Slider_Adminhtml</Netgo_Slider>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <routers>
            <netgo_slider>
                <use>standard</use>
                <args>
                    <module>Netgo_Slider</module>
                    <frontName>netgo_slider</frontName>
                </args>
            </netgo_slider>
        </routers>
        <layout>
            <updates>
                <netgo_slider>
                    <file>netgo_slider.xml</file>
                </netgo_slider>
            </updates>
        </layout>
        <translate>
            <modules>
                <Netgo_Slider>
                    <files>
                        <default>Netgo_Slider.csv</default>
                    </files>
                </Netgo_Slider>
            </modules>
        </translate>
    </frontend>
    <default>
        <netgo_slider>
            <homeslider>
                <breadcrumbs>1</breadcrumbs>
            </homeslider>
        </netgo_slider>
    </default>
</config>
